<resources>
    <!-- Button styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <!-- Text styles -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_xlarge</item>
    </style>

    <!-- Image styles -->
    <style name="ProfileImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>
    <style name="AppEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>